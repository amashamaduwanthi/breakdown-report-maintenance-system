{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "breakdowns": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$breakdownId": {
        ".read": "auth != null && (data.child('assignedTechnician/uid').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'manager')",
        ".write": "auth != null && (data.child('assignedTechnician/uid').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'manager')",
        "updates": {
          ".read": "auth != null && (data.parent().child('assignedTechnician/uid').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'manager')",
          ".write": "auth != null && (data.parent().child('assignedTechnician/uid').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'manager')"
        }
      }
    }
  }
}

